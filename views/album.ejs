<% include partials/header %>
<div class="container main-container">
    <div class="row">
        <div class="col-md-12">
            <h2>Disintegration </h2>
            <hr>

            <form method="POST" action="/updateAlbum" class="friendly-disabled">

                <div class="form-group col-md-12">
                    <% if(session.user){ %> 
                        <input type="hidden" name="AlbumId" value="<%=album.AlbumId%>">
                    <%}%>
                    <label for="AlbumName">Album Name</label>
                    <input type="text" name="AlbumName" class="form-control" id="AlbumName" value="<%=album.AlbumName%>"<% if(!session.user){ %>
                        disabled
                        <%}%>>
                </div>
                <div class="form-group col-md-6">
                    <label for="ArtistId">Artist / Band</label>
                    <select name="ArtistId" class="form-control" id="ArtistId"<% if(!session.user){ %>
                            disabled
                            <%}%>>
                        <option value=''>Select Artist</option>
                        <%artists.forEach(function(artist){%>
                        <option value="<%=artist.ArtistId%>" 
                            <% if(theArtist){ if(artist.ArtistId==theArtist.ArtistId) { %> selected="selected"<%}}%>>
                            <%= artist.BandName%>
                        </option>
                        <%})%>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="RecordLabel">Record Label </label>
                    <input type="text" name="RecordLabel" class="form-control" id="RecordLabel" value="<%=album.RecordLabel%>"
                        <% if(!session.user){ %>
                    style="cursor: not-allowed" disabled
                    <% } %>
                    >
                </div>
                <div class="form-group col-md-6">
                    <label for="CatalogNumber">Catalog Number</label>
                    <input type="text" name="CatalogNumber" class="form-control" id="CatalogNumber" value="Unknown" <%
                        if(!session.user){%>
                    style="cursor: not-allowed" disabled
                    <% } %>>
                </div>
                <div class="form-group col-md-3">
                    <label for="YearReleased">Year Released</label>
                    <input type="text" name="YearReleased" class="form-control" id="YearReleased" value="<%=album.YearReleased%>"
                    <% if(!session.user){ %>
                    style="cursor: not-allowed" disabled
                    <% } %>>
                </div>
                <div class="form-group col-md-3">
                    <label>Rating</label><br>
                    <input type="radio" name="Rating" value="1" <% if(!session.user){%>
                    style="cursor: not-allowed" disabled
                    <% } %>
                    <%if(album.Rating == 1){%> checked="" <%}%>>
                    &nbsp;
                    <input type="radio" name="Rating" value="2" <% if(!session.user){%>
                    style="cursor: not-allowed" disabled
                    <% } %>
                    <%if(album.Rating == 2){%> checked="" <%}%>>
                    &nbsp;
                    <input type="radio" name="Rating" value="3" <% if(!session.user){%>
                    style="cursor: not-allowed" disabled
                    <% } %>
                    <%if(album.Rating == 3){%> checked="" <%}%>>
                    &nbsp;
                    <input type="radio" name="Rating" value="4" <% if(!session.user){%>
                    style="cursor: not-allowed" disabled
                    <% } %>
                    <%if(album.Rating == 4){%> checked="" <%}%>>
                    &nbsp;
                    <input type="radio" name="Rating"  value="5" <% if(!session.user){%>
                    style="cursor: not-allowed" disabled
                    <% } %>
                    <%if(album.Rating == 5){%> checked="" <%}%>>
                    
                </div>


                <div class="form-group col-md-12">
                    <label for="SongList">Song List</label>
                    <textarea name="SongList" rows="10" class="form-control" id="SongList" <% if(!session.user){ %>
                        style="cursor: not-allowed" disabled
                        <% } %>><%= album.SongList %></textarea>
                </div>
                <div class="form-group col-md-12">
                    <label for="Comments">Comments</label>
                    <textarea name="comments" class="form-control" id="Comments"
                    <% if(!session.user){%>
                        style="cursor: not-allowed" disabled
                        <% } %>><%= album.comments%></textarea>
                </div>
                <br><br>
                <%if(session.user){%>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary pull-right margin-left-10">Update</button>
                    <a class="btn btn-danger pull-right" href="/deleteAlbum/<%=album.AlbumId%>">Remove</a>&nbsp;&nbsp;
                </div>
                <%}%>
            </form>



        </div>

    </div>
</div>
<%include partials/footer%>