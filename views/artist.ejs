<% include partials/header %>
<div class="container main-container">
    <div class="row">
        <div class="col-md-12">
            <h2>
                <%= artist.BandName %>
            </h2>
            <hr>

            <form class="friendly-disabled" method="POST" action="/updateArtist">
                <div class="form-group col-md-12">
                    <%if(session.user){%>
                        <input type="hidden" name="ArtistId" value="<%=artist.ArtistId%>">
                    <%}%>
                    <label for="BandName">Artist / Band Name</label>
                    <input type="text" name="BandName" class="form-control" id="BandName" <% if(!session.user){ %>
                    disabled
                    <%}%> value="<%=artist.BandName %>" >
                </div>
                <div class="form-group col-md-6">
                    <label for="MusicGenre">Genre</label>
                    <input type="text" name="MusicGenre" class="form-control" id="MusicGenre" <% if(!session.user){ %>
                    disabled
                    <%}%> value="<%= artist.MusicGenre %>">
                </div>
                <div class="form-group col-md-6">
                    <label for="YearFormed">Year Formed</label>
                    <input type="text" name="YearFormed" class="form-control" id="YearFormed" <% if(!session.user){ %>
                    disabled
                    <%}%> value="<%=artist.YearFormed %>">
                </div>
                <div class="form-group col-md-12">
                    <label for="BandMembers">Band Members</label>
                    <textarea name="BandMembers" class="form-control" id="BandMembers" <% if(!session.user){ %> disabled <%}%>><%= artist.BandMembers %></textarea>
                </div>
                <% if(session.user){ %>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary pull-right margin-left-10">Update</button>
                    <a class="btn btn-danger pull-right" href="/deleteArtist/<%=artist.ArtistId%>">Remove</a>&nbsp;&nbsp;
                </div>
                <%}%>

            </form>




        </div>


    </div>
</div>

<%include partials/footer%>